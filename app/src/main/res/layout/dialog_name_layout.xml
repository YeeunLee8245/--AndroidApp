<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="322dp"
    android:layout_height="290dp"
    android:background="@drawable/background_dialog"
    android:layout_gravity="center"
    tools:context=".NameLayoutDialog">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideHIT"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="50dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideVICB"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.79" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideHICB"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideHICB2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideHICB3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.71"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideHICB4"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideVIC2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideVIC3"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_info"
            android:text="별명을 입력해주세요."
            android:textAlignment="center"
            android:textColor="@color/textDialog"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="@id/guideHIT"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_dialog"
            android:maxLength="7"
            android:maxLines="1"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/btnNameDuplicate"
            app:layout_constraintEnd_toStartOf="@+id/btnNameDuplicate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideHICB" />
        <Button
            android:id="@+id/btnNameDuplicate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_chk_dialog"
            android:fontFamily="@font/font_info"
            android:text="중복확인"
            android:textSize="22dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/guideHICB2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideVICB"
            app:layout_constraintTop_toTopOf="@id/guideHICB"/>

        <Button
            android:id="@+id/btnNameComplete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_cpl_dialog"
            android:fontFamily="@font/font_info"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/guideHICB4"
            app:layout_constraintEnd_toStartOf="@+id/guideVIC3"
            app:layout_constraintStart_toStartOf="@+id/guideVIC2"
            app:layout_constraintTop_toTopOf="@+id/guideHICB3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>